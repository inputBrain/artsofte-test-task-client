@model ArtsofteClient.API.Employee.GetAllEmployeeResponse

<div class="container mt-5">
    <button type="button" class="btn btn-sm btn-info"
            onclick="location.href='@Url.Action("CreateEmployeeForm", "Employee")'">Create</button>
    <hr>
    <table class="table table-hover" id="newsTable">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Age</th>
            <th>Language</th>
            <th>Department</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Employees)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
                <td>@item.Language</td>
                <td>@item.Department</td>
                <td>@item.Gender</td>
                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-sm btn-outline-warning" 
                                onclick="location.href='@Url.Action("UpdateEmployeeForm", "Employee", new { employeeId = item.Id })'">Edit</button>

                        <button type="button" class="btn btn-sm btn-outline-danger"
                                onclick="location.href='@Url.Action("DeleteEmployee", "Employee", new { employeeId = item.Id})'">Delete</button>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>